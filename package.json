{
    "name": "portal-civico-backend",
    "version": "0.1.0",
    "description": "Portal de Transparência Cívica - Santos/SP",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:migrate": "tsx src/database/migrate.ts",
        "db:seed": "tsx src/database/seed.ts",
        "db:reset": "tsx src/database/reset.ts",
        "collect:vereadores": "tsx src/scripts/collect-vereadores.ts",
        "collect:diario": "tsx src/scripts/collect-diario.ts",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "transparencia",
        "dados-abertos",
        "politica",
        "santos"
    ],
    "author": "Portal Cívico Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "redis": "^4.6.12",
        "ioredis": "^5.3.2",
        "bull": "^4.12.0",
        "axios": "^1.6.5",
        "cheerio": "^1.0.0-rc.12",
        "puppeteer": "^21.7.0",
        "pdf-parse": "^1.1.1",
        "tesseract.js": "^5.0.4",
        "zod": "^3.22.4",
        "date-fns": "^3.0.6",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1",
        "crypto": "^1.0.1",
        "fast-csv": "^5.0.0",
        "pdfkit": "^0.14.0",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5",
        "@types/pg": "^8.10.9",
        "@types/pdf-parse": "^1.1.4",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/bcryptjs": "^2.4.6",
        "typescript": "^5.3.3",
        "tsx": "^4.7.0",
        "vitest": "^1.1.1",
        "@vitest/coverage-v8": "^1.1.1",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "prettier": "^3.1.1"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    }
}