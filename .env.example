# ========================================
# Portal Cívico - Variáveis de Ambiente
# ========================================

# Ambiente (development, staging, production)
NODE_ENV=development

# Servidor
PORT=3000
HOST=localhost

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portal_civico
DB_USER=portal_user
DB_PASSWORD=portal_pass_dev
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_dev
REDIS_DB=0

# JWT Authentication (Admin Panel)
JWT_SECRET=seu_secret_super_seguro_aqui_min_32_chars
JWT_EXPIRES_IN=24h

# Admin Credentials (Hardcoded por enquanto)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$exemplo_de_hash_bcrypt_aqui

# Coleta de Dados
COLLECTION_ENABLED=true
COLLECTION_RETRY_ATTEMPTS=3
COLLECTION_RETRY_DELAY_MS=5000
COLLECTION_TIMEOUT_MS=30000

# Rate Limiting (para scrapers)
SCRAPER_DELAY_MS=3000
SCRAPER_USER_AGENT=PortalCivico/1.0 (contato@portalcivico.com.br)

# Storage (PDFs do Diário Oficial)
STORAGE_PATH=/app/storage
DIARIO_PDF_PATH=/app/storage/diarios

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs
LOG_MAX_FILES=30

# Fontes de Dados - Santos/SP
SANTOS_CAMARA_URL=https://www.camarasantos.sp.gov.br
SANTOS_DIARIO_URL=https://diariooficial.santos.sp.gov.br
SANTOS_TRANSPARENCIA_URL=https://www.santos.sp.gov.br

# Bull Queue (Jobs)
BULL_QUEUE_PREFIX=portal-civico
BULL_BOARD_PORT=3001

# API Rate Limiting (público)
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (segundos)
CACHE_TTL_POLITICIANS=3600
CACHE_TTL_PROJECTS=1800
CACHE_TTL_SESSIONS=3600

# Features Flags
FEATURE_VOTING_DATA=false
FEATURE_EXECUTIVE_ACTS=true
FEATURE_ATTENDANCE=true

# Monitoring (opcional)
SENTRY_DSN=
LOGTAIL_TOKEN=

# Email Alerts (opcional - para depois)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=dev@portalcivico.com.br